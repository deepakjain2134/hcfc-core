@model HCF.BDO.Standard

@{
    ViewBag.Title = Localizer["NewStandard"];
}

    @section pageHeader{
    <section class="content-header">
            <h1>
                @Localizer["NewStandard"]
            </h1>
    </section>
        }
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="settingnewBox">
                @await Html.PartialAsync("_MoreConfig")

                <div class="rightcol-setting">
                    <div class="box box-primary">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CategoryId)<em class="required-field"> *</em>
                                        @Html.DropDownListFor(model => model.CategoryId, new SelectList(ViewBag.Category, "CategoryId", "Name"),
                                        "Select Category", new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(model => model.CategoryId)
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.TJCStandard)<em class="required-field"> *</em>
                                        @Html.TextBoxFor(model => model.TJCStandard, null, new { @class = "form-control", required = "required", maxlength = 50 })
                                        @Html.ValidationMessageFor(model => model.TJCStandard)
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.TJCDescription)<em class="required-field"> *</em>
                                        @Html.TextAreaFor(model => model.TJCDescription, new { @class = "form-control", required = "required", maxlength = 450 })
                                        @Html.ValidationMessageFor(model => model.TJCDescription)
                                    </div>
                                    <div class="form-group comman_checkbox">
                                        @Html.CheckBoxFor(model => model.IsActive, true)<span></span>
                                        @Html.ValidationMessageFor(model => model.IsActive)
                                        <label>Active</label>
                                    </div>
                                </div>
                            </div>
                            <div class="button_Div text-right">
                                <input type="submit" value=' @Localizer["Save"]' class="comm-button" name="submitType" />
                                @*@Html.ActionLink("Cancel", "Index", "Goal", new { @class = "comm-Cancelbutton" })*@
                                @Html.ActionLink("Cancel", "Index", new { controller = "Goal" }, new { @class = "comm-Cancelbutton" })
                            </div>

                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
