@model HCF.BDO.Standard

@{
    ViewBag.Title = Localizer["UpdateEditStandard"];
}

    @section pageHeader{
    <section class="content-header">
        <h1>
            @Localizer["UpdateEditStandard"]
        </h1>
    </section>
        }
    <div class="container-fluid">
        <div class="row">
            <div class="settingnewBox">

                @await Html.PartialAsync("_MoreConfig")

                <div class="rightcol-setting">
                    <div class="box box-primary">
                        @using (Html.BeginForm("editstandard", "Goal", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.StDescID)
                           
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.CategoryId)<em class="required-field"> *</em>
                                                @Html.DropDownListFor(model => model.CategoryId, new SelectList(ViewBag.Category, "CategoryId", "Name"),
                                            "Select Category",
                                         new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.CategoryId)
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.TJCStandard)<em class="required-field"> *</em>
                                            @Html.TextBoxFor(model => model.TJCStandard, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.TJCStandard)
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.TJCDescription)
                                            @Html.TextAreaFor(model => model.TJCDescription, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.TJCDescription)
                                        </div>
                                        <div class="form-group comman_checkbox">
                                            
                                            @*@Html.LabelFor(model => model.IsActive)*@
                                            @Html.CheckBoxFor(model => model.IsActive, new { @checked = "checked" })<span></span>
                                                                                                                    <label>Active</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <input type="submit" value='@Localizer["Update"]' class="button1 comm-button" style="background-image:none;"/>
                                    @Html.ActionLink("Cancel" , "Index", "Goal", new { @class = "button1" }, new { @class = "comm-Cancelbutton" })
                                </div>
                           
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

