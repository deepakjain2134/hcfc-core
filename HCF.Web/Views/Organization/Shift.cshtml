@model IEnumerable<HCF.BDO.Shift>
@{
    ViewBag.Title = "Shift";
}

    @section pageHeader{
    <section class="content-header">
        <h1>
            Shift
        </h1>
    </section>
        }
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 settingnewBox">
                @await Html.PartialAsync("_MoreConfig")
                <div class="rightcol-setting">
                    <div class="box box-primary">
                        <div class="row">
                            <div class="col-md-12">
                                <table id="MyTable" class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th style="display:none"></th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Name)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.StartTime)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.EndTime)
                                            </th>
                                            <th class="no-sorting" style="width:20px;">Active</th>
                                            <th class="no-sorting">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrderBy(x => x.Name))
                                        {
                                            <tr>
                                                <td style="display:none">
                                                    @Html.DisplayFor(modelItem => item.ShiftId)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Name)
                                                </td>
                                                <td>
                                                    @item.StartTime.ConvertToString()
                                                </td>
                                                <td>
                                                    @item.EndTime.ConvertToString()
                                                </td>

                                                <td class="comman_checkbox1 text-center">
                                                    @Html.DisplayFor(modelItem => item.IsActive)<span></span>
                                                </td>
                                                <td class="build-editicon">
                                                    <a href="@Url.Action("Addshift", "Organization",new { shiftId = item.ShiftId})" class="pull-left">
                                                        <img src="@Url.Content(HCF.Web.Models.ImagePathModel.EditIcon)" title="Edit Shift" alt="3d_add_button" />
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
