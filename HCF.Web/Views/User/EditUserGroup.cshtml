@model HCF.BDO.UserGroup
@{
    ViewBag.Title = Model.GroupId == 0 ? Localizer["AddUserGroup"] : Localizer["UpdateUserGroup"];
}


    @section pageHeader{
    <section class="content-header">
        <h1>
            @ViewBag.Title
        </h1>
    </section>
        }
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="box box-primary">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.GroupId)
                        @Html.HiddenFor(model => model.CreatedBy)
                        
                            <div class="row">
                                <div class="col-lg-1">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Name)<em class="required-field"> *</em>:
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.TextBoxFor(model => model.Name, new { style = "width:100%", required = "required", @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-1">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Description):
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.TextBoxFor(model => model.Description, new { style = "width:100%", @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-lg-1">
                                    <div class="form-group">
                                        @Html.CheckBoxFor(model => model.IsActive)<span></span>
                                    </div>
                                </div>
                                <div class="col-lg-1">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.IsActive)
                                    </div>
                                </div>
                            </div>
                            <div class="common-btnBox">
                                <input type="submit" value='@(Model.GroupId == 0 ? Localizer["Add"] : @Localizer["Update"])' class="btn comm-button" />
                                @Html.ActionLink("Cancel", "UserGroup", "", new { @class = "btn comm-Cancelbutton" })
                            </div>
                        
                    }
                </div>
            </div>
        </div>
    </div>
