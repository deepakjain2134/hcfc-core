@{
    ViewBag.Title = "Get Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    @section pageHeader{
    <section class="content-header">
        <h1>
            Get Password
        </h1>
    </section>
        }
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-xs-3">
                <div class="box box-primary general_menu">
                </div>
            </div>
            <div class="col-lg-9 col-xs-9">
                <div class="box">
                    <div class="form">

                        <label>Salt</label>
                        <input type="text" name="salt" class="form-control" id="salt" required />
                        <br />
                        <label>Password</label>
                        <input type="text" name="password" class="form-control" id="password" required />
                        <br />

                        <button type="submit" class="btn btn-primary btn-block btn-flat" id="btnSubmit" title="Login">Get Password</button>

                    </div>
                </div>
            </div>
        </div>
    </div>


@section Scripts{
    <script language="javascript">

        $("#btnSubmit").click(function () {
            var password = $("#password").val();
            var salt = $("#salt").val();

            $.ajax({
                url: '@Url.Action("GetPassword", "Home")',
                type: "POST",
                data: { password: password, salt: salt },
                dataType: 'json',
                success: function (result) {
                    alert(result);
                    $("#password").val("");
                    $("#salt").val("");
                }
            });
        });
    </script>
}