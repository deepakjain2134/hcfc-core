@model HCF.BDO.CityMaster

@using (Html.BeginForm("AddCity", "Common"))
{
    <div class="row">
        <div class="col-md-12">
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.CityId)
                @Html.HiddenFor(model => model.StateId)
                <div class="form-group">
                    @*@Html.StateDropDownList("State", 0, "Select State", new { @class = "form-control", required = "required"})*@
                    <statedropdownlist firsttext="Select State"
                                       required="required"
                                       class="form-control"
                                       selectedvalue="0"
                                       name="State">
                    </statedropdownlist>

                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CityName)<em class="required-field"> *</em>
                    @Html.TextBoxFor(model => model.CityName, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.CityName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.CityCode)<em class="required-field"> *</em>
                    @Html.TextBoxFor(model => model.CityCode, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.CityCode)
                </div>
                <div class="form-group comman_checkbox">
                    @Html.LabelFor(model => model.IsActive)
                    @Html.EditorFor(model => model.IsActive)<span></span>
                    @Html.ValidationMessageFor(model => model.IsActive)
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="submit" onclick="loadStates()" value="Save" class="button1" />
            <button type="button" class="button1" data-dismiss="modal">Cancel</button>
        </div>
    </div>
}
<script>
    function loadStates() {
        debugger;
        let stateId = $('#State option:selected').val();
        let state = $("#StateId");
        state.val(stateId);
    }
</script>
