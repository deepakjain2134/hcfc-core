@model List<HCF.BDO.UserProfile>
@{
    string id = this.ViewData.ContainsKey("assigneViewId") ? this.ViewData["assigneViewId"].ToString() : string.Empty;

}

@if (Model.Count > 1)
{
    <td data-toggle="modal" data-target="#addEpAssigneeModel"
        class="addEpAssignee" title="Assign User"
        id="EPDetailId_@id"
        data-userlist="@string.Join(",", Model.Select(x => x.UserId))">
        <a href="javascript:void(0);">@string.Format("{0}{1}{2}{3}", Model[0].FullName, " + ", Model.Count - 1, " More")</a>
    </td>
}
else if (Model.Count > 0)
{
    <td data-toggle="modal" data-target="#addEpAssigneeModel" class="addEpAssignee" title="Assign User" id="EPDetailId_@id" data-userlist="@string.Join(",", Model.Select(x => x.UserId))">
        <a href="javascript:void(0);">@Model[0].FullName</a>
    </td>
}
else
{
    <td data-toggle="modal" data-target="#addEpAssigneeModel" class="addEpAssignee" title="Assign User" id="EPDetailId_@id" data-userlist="">
        <a href="javascript:void(0);">Assign User</a>
    </td>
}
