@model HCF.BDO.InspectionSteps
<div class="modal-header">  
    <h4 class="modal-title">Update Deficiency
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </h4>
</div>
<div class="modal-body">
    <div class="row">
        @using (Html.BeginForm("UpdateStepDeficeincyStatus", "Common", FormMethod.Post, new { id = "updatedeficiencyform" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(m => Model.TInsStepsId)
            @Html.HiddenFor(m => Model.StepsId)
            @Html.HiddenFor(m => Model.InspectionDetailId)
            @Html.HiddenFor(m => Model.DRTime)
            @Html.HiddenFor(m => Model.DeficiencyDate)
            <div class="col-md-12">
                <div class="col-lg-12 forward_form">
                    <div id="tbl">
                        <div class="form-group row">
                            <input type="hidden" name="UserIds" value="">
                            <div class="col-lg-3">
                                <label>Check Point:</label>
                            </div>
                            <div class="col-lg-9">
                                <label>@Model.Steps.Step</label>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                <label>Status:</label>
                            </div>
                            <div class="col-lg-9">
                                @Html.DropDownListFor(m => Model.DeficiencyStatus, new SelectList(ViewBag.WOStatus, "Code", "Name"), new { @class = "form-control email_drop" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-3">
                                <label>Complection Comments:</label>
                            </div>
                            <div class="col-lg-9">
                                @Html.TextBoxFor(m => Model.Comments)
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="button_Div">
                <input name="submitButton" value="SAVE" class="comm-button" id="Submit" type="submit" />
                <input type="submit" name="submitButton" value="CANCEL" data-dismiss="modal" class="comm-Cancelbutton" />
            </div>
        }
    </div>
</div>

