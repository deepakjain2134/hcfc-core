@model HCF.Web.Models.Comment
<div class="modal-header">    
    <h4 class="modal-title">@Model.Title 
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </h4>
</div>
<div class="modal-body">
    
        <textarea name="text" cols="40" rows="5" class="form-control" id="Commenttxt" readonly="readonly">@Model.Description</textarea>
    
    <div class="modal-footer">
        <button type="button" class="comm-Cancelbutton" data-dismiss="modal">Close</button>
    </div>

</div>