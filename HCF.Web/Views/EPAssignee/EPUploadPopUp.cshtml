<div class="modal-dialog" style="max-width: 50%;">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Upload EP</h4>
        </div>
        <div class="modal-body">
            <form asp-controller="EPAssignee" asp-action="EPUploadPopUp" method="post" enctype="multipart/form-data" data-ajax-success="OnSuccess"
                  data-ajax="true" data-ajax-method="POST" id="epupload-form">
                <input type="file" name="postedFile" id="postedFile" />
                @*<input type="submit" value="Import" />*@
            </form>
            <div id="loadPartial">

            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="popupCommon-btn comm-button" id="btnUploadEPAssignee">Upload EP Assignee</button>
            <button type="button" class="popupCommon-btn comm-Cancelbutton" data-dismiss="modal">Cancel</button>
        </div>
    </div>
</div>
<script>

    $('#postedFile').on("change", function () {
        $("#epupload-form").submit();
    });

    function OnSuccess(data) {
        $('#loadPartial').html(data);
        $('#loadPartial').fadeIn('fast');
    }

    $("#btnUploadEPAssignee").click(function () {

        var count = 0;
        $("input:checkbox[name=epdetailId]:checked").each(function () {
            count++;
        });
        alert("EP Assigned Successsfully!" + count);

    });

</script>
