    .status0 {
        background-color: #ed1c24;
    }

    .status1 {
        background-color: green;
    }

    .insstatus {
        display: inline-block;
        padding: 2px 7px;
        color: #fff;
        border-radius: 10px;
        font-size: 12px;
        cursor: pointer;
    }

    #totalResult {
        display: block;
        padding-top: 5px;
    }
</style>


