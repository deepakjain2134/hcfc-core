@model List<HCF.BDO.Buildings>

<div class="adduserListpanel">
    <h4 class="roundsHeading" id="rLocations"><i class="fa fa-chevron-down"></i> Locations </h4>
    <ul class="crx-scrollBar rLocationsul">
        @foreach (var building in Model.Where(x => x.IsActive).OrderBy(x => x.BuildingName))
        {
            <li>
                <b>@building.BuildingName</b>
                <ul class="selected-floors">
                    @foreach (var floor in building.Floor.OrderBy(x => x.Sequence))
                    {
                        <li class="floor" floorid="@floor.FloorId">&nbsp;&nbsp;&nbsp;@floor.FloorName
                        
                        <div class="floor_status"></div>
                        </li>
                    }
                </ul>
            </li>
        }
    </ul>
</div>
<script>
    $("#rLocations").click(function () {
        $(".rLocationsul").slideToggle('linear');
        $("#rLocations").find(".fa").toggleClass("rightarrow");
        });
</script>
