@model IEnumerable<HCF.BDO.InspectionGroup>
@{
    ViewBag.Title = "Inspection Schedule";
}

    @section pageHeader{
    <section class="content-header">
        <h1>
            Inspection Schedules
        </h1>
    </section>
        }
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <div class="box box-primary general_menu">
                    @await Html.PartialAsync("_MoreConfig")
                </div>
            </div>
            <div class="col-md-9">
                <div class="box box-primary">
                    <div class="add_button_comman">
                        <a href='@(Url.RouteUrl("addgroup"))' class="pull-right">
                            <img src="@Url.Content(HCF.Web.Models.ImagePathModel.AddIcon)" title="Add Scheduler" alt="3d_add_button" />
                        </a>
                    </div>
                    
                        <table id="myTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.GroupName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InspectionDate)
                                    </th>
                                    <th>@Localizer["Status"] </th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.GroupName)
                                        </td>
                                        <td>
                                            @item.InspectionDate.Value.ToClientTime().ToFormatDate()
                                        </td>
                                        <td class="comman_checkbox1">
                                            @Html.DisplayFor(modelItem => item.IsActive)<span></span>
                                        </td>
                                        <td title="Edit">
                                            <img onclick="location.href ='@Url.Action("editGroup", "Inspection", new { gid = item.InspectionGroupId })'"
                                                 src="@Url.Content(HCF.Web.Models.ImagePathModel.EditIcon)" title="Edit" alt="Edit" />
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    
                </div>
            </div>
        </div>
    </div>

