@model HCF.BDO.AssetType

@{
    ViewBag.Title = Localizer["TitleAssetsType"];
}



    <section class="content-header">
        <h1>
            @Localizer["TitleAssetsType"]
        </h1>
    </section> 

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                       

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Name)<em class="required-field"> *</em>
                                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" , required = "required" })
                                        @Html.ValidationMessageFor(m => m.Name)
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.AssetTypeCode)<em class="required-field"> *</em>
                                        @Html.TextBoxFor(m => m.AssetTypeCode, new { @class = "form-control", required = "required" })
                                        @Html.ValidationMessageFor(m => m.AssetTypeCode)
                                    </div>                                   
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.IsActive, new { @class = "control-label col-md-2" })
                                        @Html.CheckBoxFor(model => model.IsActive, new { @checked = "checked" })<span></span>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">@Localizer["Add"]</button>
                            @Html.ActionLink("Cancel", "assetstype", new { @class = "btn btn-danger" })
                       
                    }
                </div>
            </div>
        </div>
    </div>   




