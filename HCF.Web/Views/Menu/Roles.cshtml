    var data = ViewBag.RoleMaster;
}

    @section pageHeader{
        <section class="content-header">
            <h1>
                Roles
            </h1>
        </section>
    }
    <div class="container-fluid">
        <div class="row">
            <div class="settingnewBox">

                @await Html.PartialAsync("_MoreConfig")

                <div class="rightcol-setting">
                    <div class="box box-primary">

                       

