                            @*@ShowTree(data)*@

                            <table id="rolesTable" class="table table-bordered table-striped" hidden>
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.RoleName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Sequence)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DisplayText)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ParentName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IsChild)
                                        </th>
                                        <th class="hide">
                                            @Html.DisplayNameFor(model => model.IsChild)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IsUserRole)
                                        </th>
                                        <th class="hide">
                                            @Html.DisplayNameFor(model => model.IsUserRole)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.IsActive)
                                        </th>
                                        <th class="hide">
                                            @Html.DisplayNameFor(model => model.IsActive)
                                        </th>
                                        <th>
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        @Html.HiddenFor(modelItem => item.RoleId)
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.RoleName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Sequence)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DisplayText)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ParentName)
                                            </td>
                                            <td>
                                                @Html.CheckBoxFor(modelItem => item.IsChild, new { @class = "disabled" })<span></span>
                                            </td>
                                            <td class="hide">
                                                @(item.IsChild ? "Yes" : "No")
                                            </td>
                                            <td>
                                                @Html.CheckBoxFor(modelItem => item.IsUserRole, new { @class = "disabled" })<span></span>
                                            </td>
                                            <td class="hide">
                                                @(item.IsUserRole ? "Yes" : "No")
                                            </td>
                                            <td>
                                                @Html.CheckBoxFor(modelItem => item.IsActive, new { @class = "disabled" })<span></span>
                                            </td>
                                            <td class="hide">
                                                @(item.IsActive ? "Yes" : "No")
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "AddorEditRoles", new { roleId = item.RoleId }, new { @class = "edit" })
                                                @*@Html.ActionLink("Delete", "DeleteUserRole", new { roleId = item.RoleId }, new { @class = "delete" })*@
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>



<style>
    .hide {
        display: none;
    }

    .add_button_comman {
        position: absolute;
        right: 11px;
        top: 18px;
    }

    #rolesTable_filter {
        margin-right: 55px;
    }
