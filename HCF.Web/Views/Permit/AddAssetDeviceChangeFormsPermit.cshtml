                                                        <a href="@Url.Action("ImagePreview", "Common", new { imgSrc = item.ImagePath, title = item.FloorName + " , " + item.BuildingName })" title="@item.FileName" class="modal-link allowclick">
                                                            @item.FullFileName
                                                        </a>
                                                        <a data-id="@item.FloorPlanId" class="deletedrawing allowclick">
                                                            <img id="deletedrawing" alt="Delete" title="Delete file" src="~/dist/Images/Icons/red_cross.png" />
                                                        </a>
                                                    }
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>*@
                    </div>
                    <div class="row mopform-step2">
                        <div class="col-md-12">
                            <div class="sitelocationhide">
                                <div id="sitesList" class="sitelist">


                                    <h4>
                                        Asset Device List: <em class="required-field">*</em><input type="button" class="button1" value="Add Device" id="btnAddDevice" />

                                        <select id="Path" name="Path" required class="@(Model.AssetDeviceList.Count > 0 && !string.IsNullOrEmpty(Model.AssetDeviceList.FirstOrDefault().DeviceNumber) ? "disable" : "")">
                                            <option value="">Select Path</option>
                                            @for (int pathlist = 0; pathlist < Model.AssetDevicePathSettings.Count; pathlist++)
                                            {
                                                <option value="@Model.AssetDevicePathSettings[pathlist].PathId">@Model.AssetDevicePathSettings[pathlist].Path:@Model.AssetDevicePathSettings[pathlist].DeviceType</option>
                                            }

                                        </select>

                                        @Html.ValidationMessageFor(model => model.Path)
                                    </h4>
