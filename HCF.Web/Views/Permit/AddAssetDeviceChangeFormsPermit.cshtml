                       new Microsoft.AspNetCore.Mvc.ModelBinding.EmptyModelMetadataProvider(),
                       new Microsoft.AspNetCore.Mvc.ModelBinding.ModelStateDictionary())
                       {{ "type", Model.FormType }, { "sequence", j},
    { "DeviceType", Model.DeviceType >0 ? Model.DeviceType : 0 } }
                      )

                                            }
                                        <tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="@(HCF.Web.Base.UserSession.IsInRole("setup_Constructions_superadmin") ? "row" :"row disable")">
                        <div class="mopform-step3">
                            <div class="col-lg-12">

                                <h4>    SECTION 2: Final Approval  [Hospital Employee’s Only]</h4>

                                <div id="divWorkFlow" class="row12 cra-signatureBox">
                                    @{ int i = 0;}
                                    @for (int pathlist = 0; pathlist < Model.AssetDevicePathSettings.Count; pathlist++)
                                    {
                                        <div class="col-md-12 cra-signatureBox pathdiv" style="padding-top: 15px; border: 1px solid #b1b1b1; border-radius: 20px; margin-bottom: 15px; " PathId="@Model.AssetDevicePathSettings[pathlist].PathId">
                                            <div><label>@Model.AssetDevicePathSettings[pathlist].Path:@Model.AssetDevicePathSettings[pathlist].DeviceType</label></div>
                                            @foreach (var workflow in Model.TPermitWorkFlowDetails.Where(x => x.PathId.Value == Model.AssetDevicePathSettings[pathlist].PathId))
                                            @*@for (; i < Model.TPermitWorkFlowDetails.Where(x => x.PathId.Value == Model.AssetDevicePathSettings[pathlist].PathId).ToList().Count; i++)*@
                                            {
                                                <div class="divpermitworkflow" PathId="@Model.AssetDevicePathSettings[pathlist].PathId" isRequired="@workflow.Required" sequence="@Convert.ToInt32(workflow.Sequence)" id="@string.Format("divSequence_{0}_{1}", Convert.ToInt32(workflow.Sequence), @i)" signindex="@i">

                                                    <input type="hidden" name="TPermitWorkFlowDetails[@i].
                                                       .FileName" id="@string.Format("DSPermitSignature_{0}_{1}.FileName", Convert.ToInt32(workflow.Sequence), @i)" value="" />
                                                    <input type="hidden" name="TPermitWorkFlowDetails[@i].DSPermitSignature.FileContent" id="@string.Format("DSPermitSignature_{0}_{1}.FileContent", Convert.ToInt32(workflow.Sequence), @i)" value="" />
                                                    <input type="hidden" name="TPermitWorkFlowDetails[@i].DSPermitSignature.DigSignatureId" id="@string.Format("DSPermitSignature_{0}_{1}.DigSignatureId", Convert.ToInt32(workflow.Sequence), @i)" value="" />
                                                    <input type="hidden" id="@string.Format("hdn_DSPermitSignature_{0}_{1}_LocalSignDateTime", Convert.ToInt32(workflow.Sequence), @i)" name="TPermitWorkFlowDetails[@i].DSPermitSignature.LocalSignDateTime" value="@DateTime.Now" />
                                                    <input type="hidden" id="@string.Format("hdn_DSPermitSignature_{0}_{1}_CreatedBy", Convert.ToInt32(workflow.Sequence), @i)" name="TPermitWorkFlowDetails[@i].DSPermitSignature.CreatedBy" value="0" />

                                                    <div class="col-md-4 div-forworkflow">

                                                        <input type="hidden" name="TPermitWorkFlowDetails[@i].FormSettingId" id="@string.Format("TPermitWorkFlowDetails[{0}].FormSettingId",  @i)" value="@workflow.FormSettingId" />
                                                        <input type="hidden" name="TPermitWorkFlowDetails[@i].Id" id="@string.Format("TPermitWorkFlowDetails[{0}].Id",  @i)" value="@workflow.Id" />
                                                        <input type="hidden" name="TPermitWorkFlowDetails[@i].Sequence" id="@string.Format("TPermitWorkFlowDetails[{0}].Sequence",  @i)" value="@workflow.Sequence" />
                                                        <input type="hidden" name="TPermitWorkFlowDetails[@i].LabelSignId" id="@string.Format("TPermitWorkFlowDetails[{0}].LabelSignId",  @i)" value="@workflow.LabelSignId" />

                                                        <label>@workflow.LabelText:<em style="@((Model.AdcFormNo > 0 && workflow.Required) || (i == 0) ? "display:inline-block;" : "display:none;")" class="required-field"> *</em></label>

                                                        <select name="TPermitWorkFlowDetails[@i].LabelValue" id="@string.Format("selectSignBy_{0}_{1}", Convert.ToInt32(workflow.Sequence), @i)" class="@(i == 0 ? "form-control disable" : "form-control")">
                                                            <option value="">-- Select --</option>
                                                            @foreach (var item in lstUserProfile.OrderBy(x => x.FullName))
                                                            {
                                                                if (item.UserId == (workflow.LabelValue.HasValue && workflow.LabelValue.Value > 0 ? workflow.LabelValue.Value : -1))
                                                                {

                                                                    <option value="@item.UserId" selected="selected">@string.Format("{0}({1})", item.FullName, item.Email)</option>
                                                                }
                                                                else
                                                                {
                                                                    <option value="@item.UserId">@string.Format("{0}({1})", item.FullName, item.Email)</option>
                                                                }
                                                            }
                                                        </select>
                                                    </div>
                                                    <div class="col-md-3 div-forworkflow" style="display:none;">
                                                        <label>Signature Date :<em style="@((Model.AdcFormNo > 0 && workflow.Required) || (i == 0) ? "display:inline-block;" : "display:none;")" class="required-field"> *</em></label>
                                                        @Html.TextBoxFor(m => m.TPermitWorkFlowDetails[i].LabelSignDate, workflow.LabelSignDate.ToFormatDate(), new { id = string.Format("txtSignatureDate_{0}_{1}", Convert.ToInt32(workflow.Sequence), @i), @class = "form-control datepicker readonly", @autocomplete = "off" })
                                                    </div>
                                                    <div class="col-md-6 div-forworkflow">

                                                        <label>Comments:</label>

                                                        @Html.TextAreaFor(m => m.TPermitWorkFlowDetails[i].Comment, new { id = string.Format("txtWorkFlowComments_{0}_{1}", Convert.ToInt32(Model.TPermitWorkFlowDetails[i].Sequence), @i), @class = "form-control workflowcomment", @autocomplete = "off", maxlength = 250, title = "max limit is 250 characters" })

                                                    </div>
                                                    <div class="col-md-2 crxSignBox">
                                                        <div class="div-forworkflow @string.Format("sign_DSPermitSignature_{0}_{1}", Convert.ToInt32(workflow.Sequence), @i)">


                                                            @await Component.InvokeAsync("ViewDigitalSign", new HCF.Web.ViewModels.DigitalSignatureViewModel()
                                                       {
                                                           signs = workflow.DSPermitSignature,
                                                           MainSignatureClass = ($"{string.Format("DSPermitSignature_{0}_{1}", Convert.ToInt32(workflow.Sequence), @i)}"),
                                                           //ImgSignatureClass = "approverbysign",
                                                           HiddenFileControl = ($"{string.Format("DSPermitSignature_{0}_{1}", Convert.ToInt32(workflow.Sequence), @i)}"),
                                                           ApprovalStatus = Model.Status,
                                                           SignIndex = i,
                                                           SignSequence = Convert.ToInt32(workflow.Sequence),
                                                           SignatureControlId = ($"{string.Format("TPermitWorkFlowDetails_{0}__LabelSignId", @i)}")
                                                       })

                                                        </div>


                                                        <input isrequiredctl="@(workflow.Required && workflow.LabelSignId.HasValue && workflow.LabelSignId.Value > 0 ? "1" : "0")" isRequired="@workflow.Required" type="text" value="@(workflow.DSPermitSignature != null && workflow.DSPermitSignature.DigSignatureId > 0 ? workflow.DSPermitSignature.FileName : "")" @(i == 0 ? "required" : string.Empty) id=@string.Format("hdn_DSPermitSignature_{0}_{1}", Convert.ToInt32(workflow.Sequence), @i) sequence="@Convert.ToInt32(workflow.Sequence)" class="ddlproject assigned hdnRequired" />


                                                    </div>
                                                </div>

                                                { i = i + 1; }
                                            }

                                            @{int MinSequence = Model.TPermitWorkFlowDetails != null && Model.TPermitWorkFlowDetails.Where(x => x.PathId == Model.AssetDevicePathSettings[pathlist].PathId).OrderBy(x => x.Sequence).ToList().FirstOrDefault().Sequence > 0 ? Model.TPermitWorkFlowDetails.Where(x => x.PathId == Model.AssetDevicePathSettings[pathlist].PathId).OrderBy(x => x.Sequence).ToList().FirstOrDefault().Sequence : 0;
                                                int MaxSequence = Model.TPermitWorkFlowDetails != null && Model.TPermitWorkFlowDetails.Where(x => x.PathId == Model.AssetDevicePathSettings[pathlist].PathId).OrderByDescending(x => x.Sequence).ToList().FirstOrDefault().Sequence > 0 ? Model.TPermitWorkFlowDetails.Where(x => x.PathId == Model.AssetDevicePathSettings[pathlist].PathId).OrderByDescending(x => x.Sequence).ToList().FirstOrDefault().Sequence : 0;
                                                int CurrentSignSequence = Model.TPermitWorkFlowDetails != null && Model.TPermitWorkFlowDetails.Where(x => x.PathId == Model.AssetDevicePathSettings[pathlist].PathId && (x.LabelSignId == 0 || x.LabelSignId == null)).ToList().Count > 0 ? Model.TPermitWorkFlowDetails.Where(x => x.PathId == Model.AssetDevicePathSettings[pathlist].PathId && (x.LabelSignId == 0 || x.LabelSignId == null)).OrderBy(x => x.Sequence).ToList().FirstOrDefault().Sequence : Model.TPermitWorkFlowDetails.Where(x => x.PathId == Model.AssetDevicePathSettings[pathlist].PathId).OrderBy(x => x.Sequence).ToList().FirstOrDefault().Sequence;
                                                if (CurrentSignSequence > 0)
                                                {
                                                    bool CheckCurrentSequenceIsRequired = Model.TPermitWorkFlowDetails != null && Model.TPermitWorkFlowDetails.Where(x => x.PathId == Model.AssetDevicePathSettings[pathlist].PathId && (x.LabelSignId == 0 || x.LabelSignId == null)).ToList().Count > 0 ? Model.TPermitWorkFlowDetails.Where(x => x.PathId == Model.AssetDevicePathSettings[pathlist].PathId && (x.LabelSignId == 0 || x.LabelSignId == null)).OrderBy(x => x.Sequence).ToList().FirstOrDefault().Required : Model.TPermitWorkFlowDetails.Where(x => x.PathId == Model.AssetDevicePathSettings[pathlist].PathId).OrderBy(x => x.Sequence).ToList().FirstOrDefault().Required;
                                                    if (!CheckCurrentSequenceIsRequired && Model.TPermitWorkFlowDetails.Any(x => x.Sequence == CurrentSignSequence && (x.LabelSignId != 0 || x.LabelSignId == null)))
                                                    {

                                                        CurrentSignSequence = Model.TPermitWorkFlowDetails != null && Model.TPermitWorkFlowDetails.Where(x => x.Sequence != CurrentSignSequence && (x.LabelSignId == 0 || x.LabelSignId == null)).OrderBy(x => x.Sequence).ToList().Count > 0 ? Model.TPermitWorkFlowDetails.Where(x => x.Sequence != CurrentSignSequence && (x.LabelSignId == 0 || x.LabelSignId == null)).OrderBy(x => x.Sequence).ToList().FirstOrDefault().Sequence : MaxSequence;
                                                    }

                                                }
                                            }
                                            <input type="hidden" id="hdnCurrentSignSequence_@Model.AssetDevicePathSettings[pathlist].PathId" value="@CurrentSignSequence" />
                                            <input type="hidden" id="hdnMaxSequence_@Model.AssetDevicePathSettings[pathlist].PathId" value="@MaxSequence" />
                                            <input type="hidden" id="hdnMinSequence_@Model.AssetDevicePathSettings[pathlist].PathId" value="@MinSequence" />
                                        </div>

                                    }

                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="@(HCF.Web.Base.UserSession.IsInRole("setup_Constructions_superadmin") ? "form-group" :"form-group disable")">
