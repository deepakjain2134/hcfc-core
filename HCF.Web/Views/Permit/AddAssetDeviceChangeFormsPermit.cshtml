                        <div class="col-md-12 text-right button_Div">
                            <input type="submit" name="submit" value='@Localizer["Submit"] ' id="save" class="comm-button" />
                            <input name="submit" formnovalidate="formnovalidate" type="submit" id="btnIncomplete" value='Save Incomplete' class="@((Model.AdcFormNo > 0 && Model.Status > -1 &&  ViewBag.ShowIncomplete == 0) ? "comm-bluebutton hide" : "comm-bluebutton")" />
