@model HCF.BDO.TAssetDeviceChangeForms
@{
    ViewBag.Title = "Add Asset Device change";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var formtype = string.Empty;
    var datetype = string.Empty;
    List<HCF.BDO.UserProfile> lstUserProfile = (List<HCF.BDO.UserProfile>)ViewBag.lstUserProfile;
    if (Model.FormType == 1)
    {
        formtype = "- Addition Form";
        datetype = "Date Added";
    }
    else if (Model.FormType == 0)
    {
        formtype = " – Removal Form";
        datetype = "Date Removed";
    }
    else
    {
        formtype = " – Relocation Form";
        datetype = "Date Relocated";
    }

}

@section pageHeader{
    <section class="content-header">
        <h1>
            Asset Device Change Forms @formtype
        </h1>
    </section>
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                @using (Html.BeginForm("AddAssetDeviceChangeFormsPermit", "Permit", FormMethod.Post, new { id = "adcpermiform", @autocomplete = "off" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(m => m.AdcFormNo)
                    @Html.HiddenFor(m => m.FormType)
