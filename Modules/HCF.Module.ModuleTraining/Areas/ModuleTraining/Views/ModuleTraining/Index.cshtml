@model IEnumerable<HCF.BDO.ModuleTraining.TrainingSessionMaster>
@{
    ViewBag.Title = "Implementation Status";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section pageHeader{
    <section class="content-header">
        <h1>
            Manage Implementation Status
        </h1>
    </section>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="settingnewBox">
                @await Html.PartialAsync("_MoreConfig")
                <div class="rightcol-setting">
                    <div class="box box-primary">
                        <div class="add_button_comman">
                            <a asp-controller="ModuleTraining" asp-area="ModuleTraining" asp-action="AddModuleTraining" asp-route-Id="" class="pull-right">
                                <img id="addNewBtn" src="/dist/Images/Icons/3d_add_button.png" title="Add ModuleTraining" />
                            </a>
                        </div>
                        <table id="masterTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ShortDescription)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Description)
                                        </th>
                                        <th>Status</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.HiddenFor(modelItem => item.ModuleSessionId)
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @item.ShortDescription
                                            </td>
                                            <td>
                                                @item.Description
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsActive)<span></span>
                                            </td>
                                            <td>
                                                <a asp-controller="ModuleTraining"
                                                   asp-action="AddModuleTraining"
                                                   asp-area="ModuleTraining"
                                                   asp-route-Id="@item.ModuleSessionId"
                                                   class="button1">Edit</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script>
    var table = $('#masterTable').DataTable({
        "lengthChange": false,
        "pageLength": 10,
        "aaSorting": [],
        "bPaginate": $('#masterTable tbody tr').length > 10,
        "bInfo": false,
        "searching": true,
        "language": {
            "emptyTable": "No data available in table"
        }
    });
</script>
<style>
    .dataTables_wrapper .dataTables_paginate {
        float: right;
    }
</style>